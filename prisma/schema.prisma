generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customers {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  phoneNumber String?
  password    String?
  description String?
  Projects    project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model project {
  id                 String               @id @default(cuid())
  name               String
  description        String?
  proposal           String?
  startDate          DateTime?
  endDate            DateTime?
  paymentAmount      String?
  customer           customers            @relation(fields: [customerId], references: [id])
  customerId         String
  tasks              task[]
  paymentsmanagement paymentsmanagement[]
  status             String?              @default("waiting to start")
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  deletedAt          DateTime?
}

model task {
  id          String    @id @default(cuid())
  name        String?
  description String?
  startDate   DateTime?
  endDate     DateTime?
  project     project?  @relation(fields: [projectId], references: [id])
  projectId   String
  type        String?
  status      String?   @default("pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model paymentsmanagement {
  id        String    @id @default(cuid())
  name      String?
  amount    String?
  status    String?   @default("not paid")
  project   project?  @relation(fields: [projectId], references: [id])
  projectId String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model admin {
  id          String  @id @default(cuid())
  name        String
  email       String  @unique
  phoneNumber String?
  password    String
}
